{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ESP32 build",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
                },
            "command" : "idf.py build",
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ESP32 clean",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
                },
            "command" : "idf.py clean",
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ESP32 flash",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
                },
            // set correctly COMx port to flash ESP32
            "command" : "idf.py -p COM4 flash",
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ESP32 flash monitor",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
                },
            // set correctly COMx port to flash ESP32 and open monitor.
            "command" : "idf.py -p COM4 flash monitor",
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ESP32 fullclean",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
                },
            "command" : "idf.py fullclean",
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ESP32 monitor",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
                },
            // set correctly COMx port to open monitor.
            "command" : "idf.py -p COM4 monitor",
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "openocd",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
                },
            "command" : "openocd -f interface/jlink.cfg -f board/esp-wroom-32.cfg"
        }
    ]
}